---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const articles = await getCollection("articles");
---

<Layout
    title="Articles"
    description="A collection of articles on software development, design, and technology."
    image="/images/articles.jpg"
>
    <main>
        <h1>Articles</h1>
        <p>
            Explore our collection of articles on software development, design,
            and technology.
        </p>

        {
            articles.map((article) => (
                <div>
                    <h2>
                        <a href={`/articles/${article.id}`}>
                            {article.data.title}
                        </a>
                    </h2>
                    <p>{article.data.description}</p>
                </div>
            ))
        }
    </main>
</Layout>

<style>
    main {
        padding: 1rem;
    }

    h2 {
        margin-top: 1rem;
        color: var(--colour-primary);
    }
</style>
