---
type Props = {
    placeholder: string;
};

const { placeholder } = Astro.props;
---

<input type="text" placeholder={placeholder} />

<style>
    input {        
        color: var(--colour-secondary);
        border: none;
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        cursor: pointer;
    }
</style>
